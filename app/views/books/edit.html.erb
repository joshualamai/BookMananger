<div class="card">
  <div class="card-header bg-primary text-white">
    <h3><%= @book.new_record? ? 'New Book' : 'Edit Book' %></h3>
  </div>
  <div class="card-body">
    <%= form_with model: @book, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :published_date %>
        <%= f.date_field :published_date, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <%= f.submit 'Save Book', class: 'btn btn-success' %>
      <%= link_to 'Cancel', books_path, class: 'btn btn-secondary ml-2' %>
    <% end %>
  </div>
</div>
