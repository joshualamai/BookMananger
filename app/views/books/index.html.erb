<h1>Book List</h1>
<%= link_to 'New Book', new_book_path, class: 'btn btn-primary mb-3' %>
<table class="table table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_date %></td>
        <td>
          <%= link_to 'Show', book_path(book), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-sm' %>
          <%= button_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>